<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/welcomeMenuBg</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>

    </style>

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/splash1</item>
        <item name="android:windowExitAnimation">@anim/splash2</item>
    </style>

    <!-- LIGHT Theme -->
    <style name="Theme_Light_Base" parent="@style/ContactPicker_Theme_Light">
        <!-- ActionBarCompat -->
        <item name="colorPrimary">@color/text_color_primary_light</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/text_color_primary_dark</item>

        <item name="backgroundColor">@color/background_light</item>
        <!--<item name="icTheme">@drawable/ic_palette_black_36dp</item>-->
        <!--<item name="icPickContact">@drawable/ic_person_add_black_36dp</item>-->
    </style>

    <style name="Theme_Light_picker" parent="@style/Theme_Light_Base"/>


</resources>
